@page "/articles"

<MudItem xs="12" sm="12" md="3">
    <MudPaper Style="margin: 15px;height: 200px;text-align: center;padding: 25px">
        <MudText>Best articles</MudText>
    </MudPaper>
</MudItem>
<MudItem xs="12" sm="12" md="9">
    <MudTable Style="margin: 15px" Dense="true" Hover="true" Bordered="true" Items="new List<string>()">
        <ToolBarContent>
            <MudText Typo="Typo.h5">Articles</MudText>
            <MudSpacer/>
            <MudTextField T="string" Placeholder="Title" Adornment="Adornment.Start" AdornmentIcon="@Icons.Filled.Search"></MudTextField>
        </ToolBarContent>
        <HeaderContent>
            <MudTh>Title</MudTh>
            <MudTh>Date published</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd></MudTd>
            <MudTd></MudTd>
            <MudTd></MudTd>
        </RowTemplate>
        <PagerContent></PagerContent>
    </MudTable>
</MudItem>
